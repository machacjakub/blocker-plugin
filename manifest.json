{
    "manifest_version": 3,
    "name": "The Website Blocker",
    "version": "1.0.0",
    "description": "Blocks specified websites",
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon.png",
            "32": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        },
        "default_title": "BlockO'Clock"
    },
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_page": "options.html"
}